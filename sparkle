import board
import time
from neopixel import NeoPixel
import random

np = NeoPixel(board.D2, 30, auto_write=False, brightness = 0.3)

def sparklliest(pone, ptwo, pthree, pfour):
        np.fill(pone)
        np.show()
        for i in range(ptwo):
            np[random.randint(0, np.n - 2)]= pthree
            np.show()
            time.sleep(pfour)
while True:
    sparklliest(133, 174, 120, 76)
